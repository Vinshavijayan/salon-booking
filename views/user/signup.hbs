<!-- ======= Contact Section ======= -->
<section class="paralax-mf footer-paralax bg-image sect-mt4 route" style="background-image: url(images/beauty.png)">
    <div class="overlay-mf"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="contact-mf">
                    <div id="contact" class="box-shadow-full">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="title-box-2">
                                    <h5 class="title-left">
                                        BOOK AN APPOINTMENT
                                    </h5>
                                    <br>
                                    <h5>CREATE YOUR ACCOUNT..</h5>
                                    <br>

                                </div>
                                <div>
                                    {{#if hasError}}
                                    <div class="alert alert-danger">
                                        {{#each message}}
                                        <p>{{this}}</p>
                                        {{/each}}
                                    </div>
                                    {{/if}}
                                    <div class="col-md-12">

                                        <div>
                                            <form action="/user/signup" method="POST" >

                                                <div class="row">
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="name">Name</label>

                                                            <input type="text" class="form-control" name="name"
                                                                id="name" placeholder="name"
                                                                 />
                                                            <div class="validate"></div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="email">Email</label>

                                                            <input type="email" class="form-control" name="email"
                                                                id="email" placeholder="email" data-rule="email"
                                                                />
                                                            <div class="validate"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="subject">Password</label>

                                                            <input type="password" class="form-control" name="password"
                                                                id="password" placeholder="******" data-rule="minlen:4"
                                                                 />
                                                            <div class="validate"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="mobile">Mobile</label>

                                                            <input type="number" class="form-control" name="mobile"
                                                                id="mobile" placeholder="mobile"
                                                                 />
                                                            <div class="validate"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 text-center">
                                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                                    <button type="submit" class="btn btn-primary"> SIGN UP</button>

                                                </div>

                                                <p>ALREADY HAVE AN ACCOUNT? <a href="/user/signin">click here...</a></p>
                                            </form>

                                        </div>
                                    </div>


                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section><!-- End Contact Section -->